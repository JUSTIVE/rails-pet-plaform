<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <%= @b.title %>
                </h1>
            </div>
        </div>
        
        <div class="row">
            <table class='table table-bordered'>
            <tr>
              <th>Title</th>
              <td><%= @b.title %></td>
            </tr>
            <tr>
              <th>Description</th>
              <td><%= @b.description %></td>
            </tr>
            <tr>
              <th>Created at</th>
              <td><%= @b.created_at %></td>
            </tr>
            </tr>
            <tr>
              <th>Post type</th>
              <td><%= @b.posttype.name %></td>
            </tr>
            </table>
            <hr />
            <div class="col-lg-5">
                <a class="btn btn-default" href="/bulletin/index">목록</a>
                <a class="btn btn-default" href="/bulletin/edit/<%= @b.id %>">수정</a>
                <a class="btn btn-default" href="/bulletin/delete_complete/<%= @b.id %>">삭제</a>
            </div>
        </div>
        
        
        <br>
        
        <% if !flash.empty? %>
                    <div class="row"> 
                <div class="col-lg-5">
                    <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
                </div>
            </div> 
        <% else %>
              
        <% end %>
    </div>
</div>


    <!-- jQuery -->
<script src="/js/jquery.js"></script>
<!-- Morris Charts JavaScript -->
<script src="/js/plugins/morris/raphael.min.js"></script>
<script src="/js/plugins/morris/morris.min.js"></script>
<script src="/js/plugins/morris/morris-data.js"></script>
