<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <%= bulletin_name params[:bulletin_id] %> <small><a class="btn btn-default" href="/bulletin/<%= @bulletin.id %>/posts/new">새 글</a>
                </h1>
                
            </div>
        </div>
    
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped">
                    <thead class="thead-custom">
                        <tr>
                            <th class="tbnum">순번</th>
                            <th class="tbtitle">제목</th>
                            <th>작성자</th>
                            <th>작성일시</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        
                        <% @p.each do |p| %>
                            <tr onclick="window.document.location='/bulletin/<%= @bulletin.id %>/posts/show/<%= p.id %>';">
                                <td class="tbnum" scope="row"><a href=""><%= p.id %></a></th>
                                <td class="tbtitle"><a href=""><%= p.title %></a></td>
                                <td><a href="">Otto</a></td>
                                <td><a href=""><%= p.created_at %></a></td>
                            </tr>
                        <% end %>
                        
                    </tbody>
                </table>
            </div>
        </div>
        
        <br>
        
        <% if !flash.empty? %>
                    <div class="row"> 
                <div class="col-lg-5">
                    <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
                </div>
            </div> 
        <% else %>
              
        <% end %>
    </div>
</div>


    <!-- jQuery -->
<script src="/js/jquery.js"></script>
<!-- Morris Charts JavaScript -->
<script src="/js/plugins/morris/raphael.min.js"></script>
<script src="/js/plugins/morris/morris.min.js"></script>
<script src="/js/plugins/morris/morris-data.js"></script>
