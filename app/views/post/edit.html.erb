<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    글 수정
                </h1>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-5">
                <form action="/bulletin/<%= @bulletin.id %>/posts/edit_complete" method="post">
                    <input type="hidden" name="id" value="<%= @post.id %>">
                    <div class="form-inputs">
                        <label>제목</label>
                        <input type="text" name="title" class="form-control" value="<%= @post.title %>">
                    </div>
                    <br>
                    <div class="form-inputs">
                        <label>내용</label>
                        <textarea name="content" class="form-control" rows="10" ><%= @post.content %></textarea>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-default">수정 완료</button>
                </form>
            </div>
        </div>
            
        <br>
        
        <% if !flash.empty? %>
                    <div class="row"> 
                <div class="col-lg-5">
                    <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
                </div>
            </div> 
        <% else %>
              
        <% end %>
    </div>
</div>


    <!-- jQuery -->
<script src="/js/jquery.js"></script>
<!-- Morris Charts JavaScript -->
<script src="/js/plugins/morris/raphael.min.js"></script>
<script src="/js/plugins/morris/morris.min.js"></script>
<script src="/js/plugins/morris/morris-data.js"></script>
