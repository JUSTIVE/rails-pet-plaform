<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <%= @post.title %>
                </h1>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-5">
                    
                <p><%= @post.content %></p>
                
            </div>
            <hr />
            <div class="col-lg-5">
                <a class="btn btn-default" href="/bulletin/<%= @bulletin.id %>/posts/list">목록</a>
                <a class="btn btn-default" href="/bulletin/<%= @bulletin.id %>/posts/edit/<%= @post.id %>">수정</a>
                <a class="btn btn-default" href="/bulletin/<%= @bulletin.id %>/posts/delete_complete/<%= @post.id %>">삭제</a>
            </div>
        </div>
        
        
        <br>
        
        <% if !flash.empty? %>
                    <div class="row"> 
                <div class="col-lg-5">
                    <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
                </div>
            </div> 
        <% else %>
              
        <% end %>
    </div>
</div>


    <!-- jQuery -->
<script src="/js/jquery.js"></script>
<!-- Morris Charts JavaScript -->
<script src="/js/plugins/morris/raphael.min.js"></script>
<script src="/js/plugins/morris/morris.min.js"></script>
<script src="/js/plugins/morris/morris-data.js"></script>
